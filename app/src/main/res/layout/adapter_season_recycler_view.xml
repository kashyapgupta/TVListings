<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="120dp"
    android:padding="5dp"
    android:layout_height="160dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/adapter_season_recycler_view_poster_networkimageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"/>

    <TextView
        android:id="@+id/adapter_season_recycler_view_season_number_text_view"
        android:layout_margin="5dp"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BFFFFFFF"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/adapter_season_recycler_view_heart_image_view"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="4dp" />

    <TextView
        android:id="@+id/adapter_season_recycler_view_rating_text_view"
        android:layout_toRightOf="@id/adapter_season_recycler_view_heart_image_view"
        android:layout_width="wrap_content"
        android:textSize="7sp"
        android:layout_alignTop="@id/adapter_season_recycler_view_heart_image_view"
        android:layout_marginLeft="1dp"
        android:textColor="#BFFFFFFF"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/adapter_season_recycler_view_votes_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/adapter_season_recycler_view_heart_image_view"
        android:textSize="7sp"
        android:layout_marginTop="0dp"
        android:textColor="#BFFFFFFF"
        android:layout_below="@id/adapter_season_recycler_view_rating_text_view"/>

    <TextView
        android:id="@+id/adapter_season_recycler_view_episodes_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/adapter_season_recycler_view_votes_text_view"
        android:layout_alignTop="@id/adapter_season_recycler_view_heart_image_view"
        android:textColor="#BFFFFFFF"
        android:textSize="7sp"/>

    <TextView
        android:id="@+id/adapter_season_recycler_view_aired_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BFFFFFFF"
        android:textSize="7sp"
        android:layout_below="@id/adapter_season_recycler_view_episodes_text_view"
        android:layout_alignLeft="@id/adapter_season_recycler_view_episodes_text_view"/>

</RelativeLayout>
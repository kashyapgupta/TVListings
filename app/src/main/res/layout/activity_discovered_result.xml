<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_discovered_results_main_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9000000"
    android:nestedScrollingEnabled="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_discovered_result_recycler_view"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_margin="5dp"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_discovered_results_loading_progressBar"
            android:indeterminate="true"
            style="@android:style/Widget.Holo.ProgressBar"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/activity_discovered_results_text_view"
            android:layout_width="wrap_content"
            android:textColor="#BFFFFFFF"
            android:textSize="20sp"
            android:text="No Results Found"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_height="wrap_content" />

    </FrameLayout>

</RelativeLayout>
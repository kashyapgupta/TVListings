<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6000000" />

    <TextView
        android:id="@+id/activity_persons_home_popular_people_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BFFFFFFF"
        android:layout_marginTop="15dp"
        android:textSize="21sp"
        android:layout_marginLeft="8dp"
        android:text="Popular People"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_persons_home_popular_people_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:scrollbars="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/activity_persons_home_popular_people_text_view"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/activity_persons_home_image_ciecular_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="315dp"
        app:civ_border_width="2dp"
        android:src="@drawable/load_more"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
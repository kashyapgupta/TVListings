<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6000000" />

    <TextView
        android:id="@+id/activity_persons_home_popular_people_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BFFFFFFF"
        android:layout_marginTop="15dp"
        android:textSize="21sp"
        android:layout_marginLeft="8dp"
        android:text="Popular People"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_persons_home_popular_people_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:scrollbars="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        android:layout_below="@id/activity_persons_home_popular_people_text_view"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_persons_home_loading_progressBar"
        android:indeterminate="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        style="@android:style/Widget.Holo.ProgressBar"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/activity_persons_home_no_data_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#BFFFFFFF"
        android:textSize="20sp"
        android:visibility="gone"/>

</RelativeLayout>
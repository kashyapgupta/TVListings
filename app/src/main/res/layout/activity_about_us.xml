<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9000000">

    <ImageView
        android:id="@+id/activity_about_us_app_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/tvlistings"/>

    <TextView
        android:id="@+id/activity_about_us_app_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_about_us_app_icon"
        android:textColor="#BFFFFFFF"
        android:text="TV Listings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/activity_about_us_app_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_about_us_app_name_text"
        android:textColor="#BFFFFFFF"
        android:textSize="20sp"
        android:text="Content Provided by"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/activity_about_us_content_image"
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:layout_below="@id/activity_about_us_app_content_text"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tmdb_logo"/>

</RelativeLayout>
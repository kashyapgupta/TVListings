<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#E6000000">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/adapter_popular_people_recycler_view_poster_networkimageview"
        android:layout_width="120dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/adapter_popular_people_recycler_view_title_text_view"
        android:layout_width="wrap_content"
        android:textColor="#BFFFFFFF"
        android:textSize="18sp"
        android:layout_toRightOf="@id/adapter_popular_people_recycler_view_poster_networkimageview"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/adapter_popular_people_recycler_view_known_for_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BFFFFFFF"
        android:textSize="18sp"
        android:layout_toRightOf="@id/adapter_popular_people_recycler_view_poster_networkimageview"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/adapter_popular_people_recycler_view_title_text_view"
        android:text="Known for :"/>

    <org.apmem.tools.layouts.FlowLayout
        android:id="@+id/adapter_popular_people_recycler_view_known_for_flow_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/adapter_popular_people_recycler_view_poster_networkimageview"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:layout_below="@id/adapter_popular_people_recycler_view_known_for_text_view"/>

</RelativeLayout>